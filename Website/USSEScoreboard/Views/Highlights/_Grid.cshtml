@model USSEScoreboard.Models.HighlightViewModels.ListHighlightsViewModel

<table class="table">
    <thead>
        <tr>
            <th>
                Team Member
            </th>
            <th>
                Time Period
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Highlights)
        {
            <tr>
                <td>
                    @item.FullName
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.HighlightId">@item.DateStart.ToString("D") -> @item.DateEnd.ToString("D")</a>
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.HighlightId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.HighlightId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.HighlightId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
