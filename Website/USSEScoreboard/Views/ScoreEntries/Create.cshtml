@model USSEScoreboard.Models.ScoreEntry

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <h4>ScoreEntry</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input asp-for="DateCreated" type="hidden" value="@DateTime.Now" />
        <input asp-for="DateModified" type="hidden" value="@DateTime.Now" />

        <div class="form-group">
            <label asp-for="ScoreType" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="ScoreType" asp-items="Html.GetEnumSelectList<ScoreEntryType>()" class="form-control"></select>
                <span asp-validation-for="ScoreType" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-2 control-label">Team Member</label>
            <div class="col-md-10">
                <select asp-for="UserProfileId" class="form-control" asp-items="ViewBag.UserProfileId"></select>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Total" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Total" class="form-control" />
                <span asp-validation-for="Total" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="WeekEnding" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="WeekEnding" type="date" class="form-control" />
                <span asp-validation-for="WeekEnding" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
